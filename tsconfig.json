{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "outDir": "./js",
    "sourceMap": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "types": [
      "node"
    ]
  },
  "semicolon": [
    true,
    "always"
  ],
  "include": [
    "./src/**/*.ts",
    "./types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "./dist"
  ]
}
